[Unit]
After=xorg.target
Wants=background.target
Before=background.target
PartOf=background.target

[Service]
SyslogIdentifier=%p
Type=notify
ExecStart=env fgbg --desktop-same -di 4:23:47 \
	/mnt/volatiles/images ${HOME}/media/bgz

WatchdogSec=300
Restart=on-failure
RestartSec=20
StartLimitInterval=10min
StartLimitBurst=5

